<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

<item>
    <shape android:shape="rectangle">
        <solid
            android:color="#FFE0B2" />
    </shape>
</item>

<item>
    <rotate
        android:fromDegrees="90"
        android:pivotX="90%"
        android:pivotY="30%"
        >
        <shape android:shape="rectangle">
            <solid android:color="#7B1FA2" />
        </shape>
    </rotate>
</item>

</layer-list>